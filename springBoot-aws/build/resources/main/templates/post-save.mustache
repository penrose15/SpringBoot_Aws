{{>layout/header}}
<h1>post registration</h1>
<div class="col-md-12">
    <form>
        <div class="form-group">
            <label for="title">title</label>
            <input type="text" class="form-control"
            id="title" placeholder="input title">
        </div>
        <div class="form-group">
            <label for="author">author</label>
            <input type="text" class="form-control"
                   id="author" placeholder="input author">
        </div>
        <div class="form-group">
            <label for="content">content</label>
            <input type="text" class="form-control"
                   id="content" placeholder="input content">
        </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">cancel</a>
    <button type="button" class="btn btn-primary" id="btn-save">register</button>
</div>
{{>layout/footer}}